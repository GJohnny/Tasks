@model Product
@{
    ViewBag.Tilte = "Add Product";
}

<div class="container">
    <form asp-controller="Home" asp-action="AddProduct" method="post">
        <span asp-validation-for="Name" class="col-md-6 text-danger"></span>
        <div class="form-group col-md-6">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter name"/>
        </div>
        <span asp-validation-for="Count" class="col-md-6 text-danger"></span>
        <div class="form-group col-md-6">
            <label asp-for="Count" for="count">Count</label>
            <input asp-for="Count" class="form-control" placeholder="Enter Count"/>
        </div>
        <div class="form-group col-md-1">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
